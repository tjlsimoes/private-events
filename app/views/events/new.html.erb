<h1>New Event</h1>

<%= form_with model: @event do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: "Title of the event" %>

  <%= form.label :when, "When?"%>
  <%= form.text_field(:when, placeholder: "MM/dd/yyyy hh:mm:ss") %>

	<!-- <%= form.hidden_field :creator_id, value: current_user.id %>
-->
  <%= form.submit "Submit" %>
<% end %>