<h1><%= current_user.username %></h1>

<h2>Created events</h2>
<% @user.created_events.each do |event|%>
	<ul>
		<li>
		<p><%= event.title %></p>
		<p><%= event.when %></p>
		</li>
	</ul>
<% end %>

<br>

<% if @user.attended_events.where(when: Time.now..) %>
	<h2>Attended events</h2>
	<ul>
		<% @user.attended_events.where(when: ..Time.now).each do |event|%>
			<li>
			<p><%= event.title %></p>
			<p><%= event.when %></p>
			</li>
		<% end %>
	</ul>
<% end %>
<br>

<% if @user.attended_events.where(when: Time.now..).any? %>
	<h2>Attending future events</h2>
	<ul>
		<% @user.attended_events.where(when: Time.now..).each do |event|%>
			<li>
			<p><%= event.title %></p>
			<p><%= event.when %></p>
			</li>
		<% end %>
	</ul>
<% end %>

