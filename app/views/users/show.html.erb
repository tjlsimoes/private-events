<h1><%= current_user.username %></h1>

<h2>Created events</h2>
<% @user.created_events.each do |event|%>
	<ul>
		<li>
		<p><%= event.title %></p>
		<p><%= event.when %></p>
		</li>
	</ul>
<% end %>

<br>

<h2>Attending events</h2>
<% @user.attended_events.each do |event|%>
	<ul>
		<li>
		<p><%= event.title %></p>
		<p><%= event.when %></p>
		</li>
	</ul>
<% end %>